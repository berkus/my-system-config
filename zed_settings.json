// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "icon_theme": "VSCode Great Icons Theme",
  "assistant": {
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-5-sonnet-latest"
    },
    "version": "2"
  },
  "language_models": {
    "lmstudio": {
      "api_url": "http://localhost:1234/v1",
      "available_models": [
        {
          "name": "qwen2.5-coder-7b-instruct",
          "display_name": "qwen 2.5 coder 16K",
          "max_tokens": 16384
        }
      ]
    }
  },
  "base_keymap": "SublimeText",
  // "buffer_font_family": "PragmataPro",
  // "buffer_font_size": 16,
  "buffer_font_family": "Hack Nerd Font Mono",
  "buffer_font_size": 14,
  // "buffer_font_family": "Departure Mono",
  // "buffer_font_size": 15,
  "ui_font_family": "B612",
  "ui_font_size": 15,
  "double_click_in_multibuffer": "open",
  "theme": {
    "mode": "system",
    "light": "Xcode Bare", // Xcode theme
    "dark": "Base16 Default Dark" // Base16 theme
    // "light": "Gruvbox Light Hard",
    // "dark": "Gruvbox Dark Hard"
  },
  "wrap_guides": [80, 120],
  "calls": {
    "mute_on_join": true
  },
  "seed_search_query_from_cursor": "selection",
  "collaboration_panel": {
    "button": true
  },
  "chat_panel": {
    "button": false
  },
  "toolbar": { "selections_menu": true },
  "outline_panel": {
    "dock": "right"
  },
  "tabs": {
    "git_status": true,
    "file_icons": true
  },
  "show_whitespaces": "boundary",
  "terminal": {
    "font_family": "Hack Nerd Font Mono",
    "font_size": 13
  },
  "inlay_hints": {
    "enabled": true,
    "show_background": true,
    "show_type_hints": true,
    "show_parameter_hints": true,
    "show_other_hints": true
  },
  "ensure_final_newline_on_save": true,
  "autosave": "on_focus_change",
  "file_types": {
    "Liquid": ["*.html"]
  },
  "lsp": {
    "rust-analyzer": {
      "initialization_options": {
        "rust": {
          "analyzerTargetDir": true
        },
        "inlayHints": {
          "maxLength": null,
          "lifetimeElisionHints": {
            "enable": "skip_trivial",
            "useParameterNames": true
          },
          "closureReturnTypeHints": {
            "enable": "always"
          }
        },
        "rustfmt": {
          "extraArgs": ["+nightly"]
        }
      }
    }
  }
}
