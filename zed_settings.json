// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "agent": {
    "always_allow_tool_actions": true,
    "profiles": {
      "vibe-coding": {
        "name": "Vibe Coding",
        "tools": {
          "open": true,
          "create_directory": true,
          "batch_tool": false,
          "code_actions": true,
          "code_symbols": true,
          "contents": true,
          "copy_path": false,
          "create_file": true,
          "delete_path": false,
          "diagnostics": true,
          "edit_file": true,
          "fetch": true,
          "list_directory": true,
          "move_path": false,
          "now": true,
          "find_path": true,
          "read_file": true,
          "grep": true,
          "rename": true,
          "symbol_info": true,
          "terminal": true,
          "thinking": true,
          "web_search": true
        },
        "enable_all_context_servers": true,
        "context_servers": {}
      }
    },
    "default_profile": "vibe-coding",
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-haiku-4.5"
    },
    "play_sound_when_agent_done": true,
    "expand_edit_card": true,
    "expand_terminal_card": true
  },
  "features": {
    "edit_prediction_provider": "zed"
  },
  "show_edit_predictions": true,
  "edit_predictions": {
    "mode": "subtle"
  },
  "language_models": {
    "lmstudio": {
      "api_url": "http://localhost:1234/v1",
      "available_models": [
        {
          "name": "qwen2.5-coder-7b-instruct",
          "display_name": "qwen 2.5 coder 16K",
          "max_tokens": 16384,
          "supports_images": false,
          "supports_tool_calls": false
        }
      ]
    }
  },
  "base_keymap": "SublimeText",
  // "buffer_font_family": "PragmataPro",
  // "buffer_font_size": 16,
  "buffer_font_family": "Hack Nerd Font Mono",
  "buffer_font_size": 12,
  // "buffer_font_family": "Departure Mono",
  // "buffer_font_size": 15,
  "ui_font_family": "B612",
  "ui_font_size": 15,
  "double_click_in_multibuffer": "open",
  "icon_theme": "VSCode Great Icons Theme",
  "theme": {
    "mode": "system",
    // "light": "Xcode Bare", // Xcode theme
    // "dark": "Base16 Default Dark" // Base16 theme
    "light": "Gruvbox Light Hard", // "Alabaster BG", or "Gruvbox Light Hard",
    "dark": "Ayu Dark" // or "Gruvbox Dark Hard"
  },
  "theme_overrides": {
    "Gruvbox Light Hard": {
      "syntax": {
        "constant.comment.todo": {
          "color": "#eeeeeedd",
          "background_color": "#8008f2ff"
          // "font_weight": "bold"
          // "font_style": "italic"
        },
        "constant.comment.todo.user": {
          "color": "#eeee00dd",
          "background_color": "#8008f2ff"
          // "font_weight": "bold",
          // "font_style": "italic"
        },
        "string.comment.info": {
          "color": "#eeeeeedd",
          "background_color": "#50a14fff"
          // "font_weight": "bold",
          // "font_style": "italic"
        },
        "string.comment.info.user": {
          "color": "#eeee00dd",
          "background_color": "#50a14fff"
          // "font_weight": "bold",
          // "font_style": "italic"
        },
        "keyword.comment.warn": {
          "color": "#eeeeeedd",
          "background_color": "#c18401ff"
          // "font_weight": "bold",
          // "font_style": "italic"
        },
        "keyword.comment.warn.user": {
          "color": "#eeee00dd",
          "background_color": "#c18401ff"
          // "font_weight": "bold",
          // "font_style": "italic"
        },
        "property.comment.error": {
          "color": "#eeeeeedd",
          "background_color": "#ca1243ff"
          // "font_weight": "bold",
          // "font_style": "italic"
        },
        "property.comment.error.user": {
          "color": "#eeee00dd",
          "background_color": "#ca1243ff"
          // "font_weight": "bold",
          // "font_style": "italic"
        }
        // Separate highlight for brackets, if needed:
        // "property.comment.error.bracket": {
        //   "color": "#00d000ff"
        //   // "background_color": "#00000000",
        //   // "font_weight": "bold",
        //   // "font_style": "italic"
        // },
        // This doesn't seem to work:
        // "emphasis.comment.user": {
        //   "color": "#000000dd",
        //   "background_color": "#00000000",
        //   "font_weight": "bold"
        //   // "font_style": "italic"
        // }
      }
    },
    "Ayu Dark": {
      "syntax": {
        "constant.comment.todo": {
          "color": "#eeeeeedd",
          "background_color": "#8008f2ff"
        },
        "constant.comment.todo.user": {
          "color": "#eeee00dd",
          "background_color": "#8008f2ff"
        },
        "string.comment.info": {
          "color": "#eeeeeedd",
          "background_color": "#50a14fff"
        },
        "string.comment.info.user": {
          "color": "#eeee00dd",
          "background_color": "#50a14fff"
        },
        "keyword.comment.warn": {
          "color": "#eeeeeedd",
          "background_color": "#c18401ff"
        },
        "keyword.comment.warn.user": {
          "color": "#eeee00dd",
          "background_color": "#c18401ff"
        },
        "property.comment.error": {
          "color": "#eeeeeedd",
          "background_color": "#ca1243ff"
        },
        "property.comment.error.user": {
          "color": "#eeee00dd",
          "background_color": "#ca1243ff"
        }
      }
    }
  },
  "wrap_guides": [80, 120],
  "calls": {
    "mute_on_join": true
  },
  "seed_search_query_from_cursor": "selection",
  "collaboration_panel": {
    "button": true
  },
  "toolbar": { "selections_menu": true },
  "minimap": {
    "show": "auto",
    "thumb": "always",
    "thumb_border": "none",
    "display_in": "active_editor"
  },
  "outline_panel": {
    "dock": "right"
  },
  "git_panel": {
    "dock": "right"
  },
  "git": {
    "hunk_style": "unstaged_hollow"
  },
  "notification_panel": {
    "button": false
  },
  "indent_guides": {
    "enabled": true,
    "coloring": "indent_aware",
    "background_coloring": "indent_aware"
  },
  "tabs": {
    "git_status": true,
    "file_icons": true,
    "activate_on_close": "left_neighbour",
    "show_diagnostics": "errors"
  },
  "preview_tabs": {
    "enabled": true,
    "enable_preview_from_file_finder": true
  },
  "diagnostics": {
    "button": true,
    "include_warnings": true,
    "inline": {
      "enabled": true,
      "min_column": 40
    }
  },
  "show_whitespaces": "boundary",
  "terminal": {
    "button": false,
    "font_family": "Hack Nerd Font Mono",
    "font_size": 13,
    "line_height": "standard"
  },
  "inlay_hints": {
    "enabled": true,
    "show_background": false,
    "show_type_hints": true,
    "show_parameter_hints": true,
    "show_other_hints": true,
    "toggle_on_modifiers_press": {
      "control": true,
      "shift": false,
      "alt": true,
      "platform": true,
      "function": false
    }
  },
  "ensure_final_newline_on_save": true,
  "always_treat_brackets_as_autoclosed": true,
  "autosave": "on_focus_change",
  "file_types": {
    "Liquid": ["*.html"]
  },
  "title_bar": {
    "show_branch_icon": true
  },
  "lsp": {
    "rust-analyzer": {
      "initialization_options": {
        "rust": {
          "analyzerTargetDir": "target/analyzer"
        },
        "checkOnSave": {
          "enable": true,
          "command": "clippy"
          // "extraArgs": ["--", "-W", "clippy::pedantic"]
        },
        "inlayHints": {
          "maxLength": null,
          "lifetimeElisionHints": {
            "enable": "skip_trivial",
            "useParameterNames": true
          },
          "closureReturnTypeHints": {
            "enable": "always"
          }
        },
        "rustfmt": {
          "extraArgs": ["+nightly"]
        }
      }
    }
  },
  "lsp_document_colors": "background"
}
